{
  "name": "universal-feedback-platform",
  "version": "2.0.0",
  "private": true,
  "description": "Universal Feedback Platform with AI-powered sentiment analysis and real-time analytics",
  "keywords": [
    "feedback",
    "analytics",
    "events",
    "real-time",
    "ai",
    "sentiment-analysis",
    "firebase",
    "nextjs",
    "express"
  ],
  "author": "Universal Feedback Platform",
  "license": "MIT",
  "homepage": "https://github.com/your-repo/universal-feedback-platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/universal-feedback-platform.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "rimraf .next cache node_modules/.cache",
    "reset": "npm run clean && npm install",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "full:dev": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"blue,green\" \"npm run dev\" \"npm run backend:dev\"",
    "full:install": "npm install && cd backend && npm install && cd ..",
    "test:api": "cd backend && npm test",
    "health": "curl -f http://localhost:3001/health || echo 'Backend not running'"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@types/qrcode": "^1.5.5",
    "lucide-react": "^0.475.0",
    "next": "15.1.6",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
