# Universal Feedback Platform - Backend Configuration
# Copy this file to .env.local and update with your settings

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins (use * for all)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Sentiment Analysis Configuration
# No API keys needed! Uses local AI models
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
SENTIMENT_CACHE_DIR=./cache

# Logging
LOG_LEVEL=info
LOG_REQUESTS=true

# Optional: Database Configuration (if you want to persist data)
# DATABASE_TYPE=memory  # Options: memory, firebase, mongodb, postgres
# DATABASE_URL=your_database_url_here

# Optional: Firebase Configuration (if using Firebase)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email

# Features (all enabled by default)
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true
