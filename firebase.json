{\n  \"hosting\": {\n    \"public\": \"out\",\n    \"ignore\": [\n      \"firebase.json\",\n      \"**/.*\",\n      \"**/node_modules/**\"\n    ],\n    \"rewrites\": [\n      {\n        \"source\": \"/api/**\",\n        \"destination\": \"/api/index.html\"\n      },\n      {\n        \"source\": \"/admin/**\",\n        \"destination\": \"/admin/index.html\"\n      },\n      {\n        \"source\": \"/event/**\",\n        \"destination\": \"/event/index.html\"\n      },\n      {\n        \"source\": \"/qr/**\",\n        \"destination\": \"/qr/index.html\"\n      },\n      {\n        \"source\": \"**\",\n        \"destination\": \"/index.html\"\n      }\n    ],\n    \"redirects\": [\n      {\n        \"source\": \"/\",\n        \"destination\": \"/admin\",\n        \"type\": 302\n      },\n      {\n        \"source\": \"/demo\",\n        \"destination\": \"/admin\",\n        \"type\": 302\n      }\n    ],\n    \"headers\": [\n      {\n        \"source\": \"/api/**\",\n        \"headers\": [\n          {\n            \"key\": \"Access-Control-Allow-Origin\",\n            \"value\": \"*\"\n          },\n          {\n            \"key\": \"Access-Control-Allow-Methods\",\n            \"value\": \"GET, POST, PUT, DELETE, OPTIONS\"\n          },\n          {\n            \"key\": \"Access-Control-Allow-Headers\",\n            \"value\": \"Content-Type, Authorization\"\n          }\n        ]\n      },\n      {\n        \"source\": \"**/*.@(js|css)\",\n        \"headers\": [\n          {\n            \"key\": \"Cache-Control\",\n            \"value\": \"public, max-age=31536000, immutable\"\n          }\n        ]\n      }\n    ]\n  },\n  \"database\": {\n    \"rules\": \"firebase-rules.json\"\n  }\n}